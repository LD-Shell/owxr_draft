---
import '../styles/global.css';
const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Oswald:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Netlify Identity -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" is:inline></script>
</head>
<body>

    <!-- TOP BAR -->
    <div class="top-bar">
        <div class="container">
            <div class="top-links">
                <a href="https://www.uh.edu" target="_blank">University of Houston</a>
                <span>|</span>
                <a href="#">Cullen College of Engineering</a>
            </div>
            <div class="top-links">
                <a href="/contact">Contact Us</a>
                <a href="#" style="color: #F4D03F;">Give to the Center</a>
            </div>
        </div>
    </div>

    <!-- MAIN HEADER -->
    <header class="main-header">
        <div class="container header-grid">
            <div class="logo-area">
                <i class="fa-solid fa-gem fa-3x" style="color: var(--uh-red);"></i>
                <div class="center-identity">
                    <h4>UNIVERSITY OF HOUSTON</h4>
                    <h1>Welch Center of Crystallization Research</h1>
                </div>
            </div>
            <div class="uh-logo-placeholder">
                <h2 style="font-family: var(--font-head); color: var(--uh-slate); letter-spacing: 2px;">UH</h2>
            </div>
        </div>
    </header>

    <!-- NAVIGATION -->
    <nav class="main-nav">
        <div class="container">
            <div class="mobile-toggle" id="mobileToggle">
                <i class="fas fa-bars"></i> Menu
            </div>
            <ul class="nav-list" id="navList">
                <li class="nav-item">
                    <a href="/" class={`nav-link ${currentPath === "/" ? "active" : ""}`}>Home</a>
                </li>
                
                <li class="nav-item">
                    <span class="nav-link">About Us <i class="fas fa-caret-down"></i></span>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-link" href="/about">Overview</a></li>
                        <li><a class="dropdown-link" href="/advisory">Advisory Board</a></li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a href="/research" class={`nav-link ${currentPath.startsWith("/research") ? "active" : ""}`}>Research</a>
                </li>

                <li class="nav-item">
                    <a href="/team" class={`nav-link ${currentPath.startsWith("/team") ? "active" : ""}`}>Team</a>
                </li>

                <li class="nav-item">
                    <a href="/outputs" class={`nav-link ${currentPath.startsWith("/outputs") ? "active" : ""}`}>Outputs</a>
                </li>

                <li class="nav-item">
                    <a href="/news" class={`nav-link ${currentPath.startsWith("/news") ? "active" : ""}`}>News</a>
                </li>
                
                <li class="nav-item">
                    <a href="/outreach" class={`nav-link ${currentPath.startsWith("/outreach") ? "active" : ""}`}>Outreach</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- CONTENT -->
    <slot />

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="footer-top text-center">
                <span class="footer-logo-text">Welch Center of Crystallization Research</span>
                <div style="display: flex; justify-content: center; gap: 20px;">
                    <a href="#"><i class="fab fa-facebook fa-2x"></i></a>
                    <a href="#"><i class="fab fa-twitter fa-2x"></i></a>
                    <a href="#"><i class="fab fa-linkedin fa-2x"></i></a>
                </div>
            </div>
            <div class="footer-bottom">
                <div>&copy; 2025 University of Houston.</div>
                <div><a href="/admin">Admin Login</a></div>
            </div>
        </div>
    </footer>

    <!-- GLOBAL SCRIPTS -->
    <script src="../scripts/menu.js"></script>
</body>
</html>