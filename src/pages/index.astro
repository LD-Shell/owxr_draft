---
import MainLayout from '../layouts/MainLayout.astro';
import '../styles/home.css';
---

<MainLayout title="Welch Center | Home">
    <section class="hero">
        <div class="hero-slider-container">
            <div class="hero-slide active">
                <img src="https://images.unsplash.com/photo-1532094349884-543bc11b234d?auto=format&fit=crop&q=80&w=1600" alt="Crystallization Research">
            </div>
            <div class="hero-slide">
                <img src="https://images.unsplash.com/photo-1581093458791-9f3c3900df4b?auto=format&fit=crop&q=80&w=1600" alt="Laboratory Work">
            </div>
            <div class="hero-slide">
                <img src="https://images.unsplash.com/photo-1629851174958-300f3933c042?auto=format&fit=crop&q=80&w=1600" alt="Molecular Simulation">
            </div>
        </div>
        
        <div class="hero-overlay"></div>

        <div class="container hero-content">
            <h2>Advancing the Frontiers of Crystallization</h2>
            <p>Engineering the future of materials through fundamental understanding of nucleation, growth, and polymorphism.</p>
            <a href="/research" class="btn" style="background: white; color: var(--uh-red); border-color: white;">Explore Our Research</a>
        </div>

        <div class="slider-arrow prev" id="prevBtn"><i class="fas fa-chevron-left"></i></div>
        <div class="slider-arrow next" id="nextBtn"><i class="fas fa-chevron-right"></i></div>
        
        <div class="slider-indicators">
            <div class="indicator active"></div>
            <div class="indicator"></div>
            <div class="indicator"></div>
        </div>
    </section>

    <section class="container section-padding" style="padding-top: 0;">
        <div class="director-grid">
            <div><img src="https://images.unsplash.com/photo-1560250097-0b93528c311a?auto=format&fit=crop&q=80&w=400" alt="Center Director" class="director-img"></div>
            <div>
                <h3 class="text-uh-red">Director's Message</h3>
                <p class="mission-text" style="margin: 20px 0;">"Welcome to the Welch Center. We bridge fundamental science and industrial application."</p>
                <p><strong>Dr. Peter Rimer</strong><br>Director, Welch Center</p>
            </div>
        </div>
    </section>

    <section class="container section-padding">
        <h3 class="text-uh-red text-center" style="margin-bottom: 40px;">Upcoming Events</h3>
        <div class="team-grid">
            <div class="aim-card">
                <div style="background: var(--uh-red); color: white; display: inline-block; padding: 5px 15px; font-weight: bold; margin-bottom: 10px;">OCT 24</div>
                <h4>Annual Crystallization Symposium</h4>
                <p>Student Center South, Ballroom B</p>
            </div>
            <div class="aim-card">
                <div style="background: var(--uh-red); color: white; display: inline-block; padding: 5px 15px; font-weight: bold; margin-bottom: 10px;">NOV 05</div>
                <h4>Distinguished Lecture: Dr. J. Doe</h4>
                <p>Engineering Bldg 2, Room 102</p>
            </div>
        </div>
    </section>

    <!-- Specific Script for Home Page Slider -->
    <script src="../scripts/slider.js"></script>
</MainLayout>