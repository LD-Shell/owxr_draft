---
import MainLayout from '../layouts/MainLayout.astro';
---
<MainLayout title="Welch Center | Team">
    <div class="container section-padding">
        <h2 class="text-uh-red text-center" style="margin-bottom: 50px;">Meet The Team</h2>
        <h3 style="border-bottom: 2px solid var(--uh-slate); display: inline-block; margin-bottom: 30px;">Principal Investigators</h3>
        <div class="team-grid">
            <div class="profile-card">
                <div class="profile-img-container"><img src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?auto=format&fit=crop&q=80&w=400" class="profile-img"></div>
                <div class="profile-info">
                    <h4 class="profile-name">Dr. Peter Rimer</h4>
                    <div class="profile-role">Center Director & PI</div>
                    <div class="profile-tags"><span class="tag">Zeolites</span></div>
                </div>
            </div>
            <div class="profile-card">
                <div class="profile-img-container"><img src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?auto=format&fit=crop&q=80&w=400" class="profile-img"></div>
                <div class="profile-info">
                    <h4 class="profile-name">Dr. Sarah Vekilov</h4>
                    <div class="profile-role">Co-Principal Investigator</div>
                    <div class="profile-tags"><span class="tag">Protein Physics</span></div>
                </div>
            </div>
        </div>
    </div>
</MainLayout>